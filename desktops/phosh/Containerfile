ARG from
FROM $from

COPY etc/ /etc/

RUN dnf -y install \
    @phosh-desktop \
    gnome-software-rpm-ostree \
    nautilus \
    ptyxis \
    default-flatpaks \
    stevia \
    --exclude gnome-calculator \
    --exclude gnome-calendar \
    --exclude gnome-clocks \
    --exclude gnome-console \
    --exclude gnome-contacts \
    --exclude gnome-maps \
    --exclude gnome-photos \
    --exclude squeekboard

RUN systemctl enable --force gdm.service

# clenup
RUN rm -rf /var/log/* && dnf clean all

RUN bootc container lint
